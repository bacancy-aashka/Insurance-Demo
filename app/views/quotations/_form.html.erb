<%= form_with(model: quotation, remote: true) do |form| %>
  <div id="error_fields">
  </div>

  <div class="field">
    <%= form.label :first_name %>
    <%= form.text_field :first_name, required: true %>
  </div>

  <div class="field">
    <%= form.label :last_name %>
    <%= form.text_field :last_name, required: true %>
  </div>

  <div class="field">
    <%= form.label :email %>
    <%= form.email_field :email, required: true %>
  </div>

  <div class="field">
    <%= form.label :eval_value %>
    <%= form.text_field :eval_value, required: true %>
  </div>

  <%= form.fields_for :address do |f| %>
    <div class="field">
      <%= f.label :address %>
      <%= f.text_area :address, required: true %>
    </div>

    <div class="field">
      <%= f.label :postal_code %>
      <%= f.text_field :postal_code, required: true %>
    </div>

    <div class="field">
      <%= f.label :city %>
      <%= f.text_field :city, required: true %>
    </div>

    <div class="field">
      <%= f.label :province %>
      <%= f.text_field :province, required: true %>
    </div>
  <% end %>

  <div class="actions">
    <%= form.submit "Get a Quote" %>
  </div>
<% end %>


<div id="transaction_form">
</div>

<div id="modal_form">
</div>


